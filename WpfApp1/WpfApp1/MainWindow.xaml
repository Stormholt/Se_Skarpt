<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"

       
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Data" Height="25" Width="50">
                <Grid>
                    <Button Content="Button" Grid.Column="0" HorizontalAlignment="Left" Margin="21,250,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
                    <DataGrid Name="Dataset" HorizontalAlignment="Left" Height="203" Margin="21,28,0,0" VerticalAlignment="Top" Width="164"/>
                </Grid>

            </TabItem>
            <TabItem Header="Temp" Height="25" Width="50">
                <Grid>
                    <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="Right" Grid.Column="1" >
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Temp" LabelFormatter="{Binding Temp}"></lvc:Axis>
                        </lvc:CartesianChart.AxisY>
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="ID" Labels="{Binding Labels}"></lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                    </lvc:CartesianChart>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
